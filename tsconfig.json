{
  "compilerOptions": {
    // "target": "es5",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2019",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2019",
      "dom"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}